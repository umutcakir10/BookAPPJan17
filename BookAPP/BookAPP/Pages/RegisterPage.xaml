<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="BookAPP.Pages.RegisterPage"
             Title="Kayıt Ol"
             Padding="15">

    <StackLayout Padding="20">
        <Entry x:Name="NameEntry" Placeholder="İsim"  Margin="10"/>
        <Entry x:Name="SurnameEntry" Placeholder="Soyisim"  Margin="10"/>
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"  Margin="10"/>
        <Entry x:Name="PasswordEntry" Placeholder="Parola" IsPassword="True"  Margin="10"/>
        <Entry x:Name="PasswordConfirmEntry" Placeholder="Parola Tekrar" IsPassword="True"  Margin="10"/>
        <Button Text="Kayıt Ol" BackgroundColor="DarkBlue" TextColor="White" Clicked="OnRegisterClicked" Margin="10"/>
        <Label x:Name="MessageLabel" TextColor="Red" Margin="10"/>
    </StackLayout>
</ContentPage>