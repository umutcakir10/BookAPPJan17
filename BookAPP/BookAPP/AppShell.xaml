<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookAPP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:pages="clr-namespace:BookAPP.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="LightBlue">
    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="LightBlue"
                                   StatusBarStyle="LightContent"/>

    </Shell.Behaviors>
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="Register"
    ContentTemplate="{DataTemplate pages:RegisterPage}"
    Route="RegisterPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />
    <ShellContent
    Title="Comment"
    ContentTemplate="{DataTemplate pages:CommentPage}"
    Route="CommentPage" />
</Shell>
